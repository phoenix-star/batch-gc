@ECHO OFF
:USAGE
:START
:INITIALIZE
    SETLOCAL ENABLEDELAYEDEXPANSION
    SET GLOBALS_FILE=%1
    SET VAR_NAME=%2
    SET VALUE=%3

:CODE
    IF NOT EXIST %GLOBALS_FILE% (
        COPY /Y NUL %GLOBALS_FILE% > NUL 2>&1
    ) 
    
    ECHO %VAR_NAME% %VALUE% >> %GLOBALS_FILE%
    

:RETURN
    ENDLOCAL

:EOF
@ECHO ON
